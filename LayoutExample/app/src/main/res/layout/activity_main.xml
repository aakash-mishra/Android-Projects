<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.layoutexample.MainActivity"
    >

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="2"
        android:id="@+id/grid_id"
        >

        <Button
            android:text="Image 1"
            android:layout_marginRight="50dp"
            android:onClick="image1"
            android:gravity=""

            />
        <Button
            android:text="Image 2"
            android:onClick="image2"

            />

        <Button
            android:text="Image 3"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:onClick="image3"
            />





    </GridLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/grid_id"

        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:id="@+id/img_view_id"
            android:src="@drawable/mp1"
            />


    </LinearLayout>



</RelativeLayout>
